<!DOCTYPE html>
<html>
<head>
  <title>Books</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header-bar">
    <div id="page-title"><h1>Book List</h1></div>
    <span id="sorter">
      <span id="sorter-title">Sort By: </span>
      <select id="select-cat">
        <option value="title" selected>Title</option>
        <option value="author">Author</option>
        <option value="year">Year</option>
        <option value="isbn">ISBN</option>
      </select>
    </span>
    <span id="sorter">
      <span id="sorter-title">Order: </span>
      <select id="select-asc">
        <option value="ascending" selected>Ascending</option>
        <option value="descending">Descending</option>
      </select>
    </span>
    <span id="sorter">
      <span id="sorter-title">Length: </span>
      <input id="select-length"></input>
      <button id="submit-length">Submit</button>
    </span>
    <span id="mybooks">See My Books</span>
  </div>

  <%= yield %>

</body>
</html>
